@using Microsoft.AspNet.Identity
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/css/layout_bundle")
    @RenderSection("css", required: false)

</head>
<body>  
    <div class="content">
        @if (Request.IsAuthenticated)
        {
            <br />
            using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { id = "logOffForm" }))
            {
                @Html.AntiForgeryToken()
                <button type="submit" id="btnLogin" onclick="return main.logout();" value="Log out">
                    Log out
                </button>
            }            
        }

        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("script", required: false)
</body>
</html>