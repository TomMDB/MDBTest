@model TechnicalTest.Models.TransactionsModel
@{
    ViewBag.Title = "Transactions";
}

<h2>Transactions</h2>

Current balance: £@Model.Balance
<br />
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var id in Model.TransactionIds)
        {
            Html.RenderAction("GetTransaction", "Transactions", new { transactionId = id });
        }
    </tbody>
</table>